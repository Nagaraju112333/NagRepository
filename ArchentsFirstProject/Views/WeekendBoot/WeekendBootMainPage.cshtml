
@{
    ViewBag.Title = "WeekendBootMainPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.1.0.js"></script>
   <link rel="stylesheet" href="~/CSS/WeekendBootMain.css" />
    <style>
        .Headerimage img {
          width:100%;
        }
    </style>
</head>
<body>
    <div class="row w-100">
        <div class=" col-lg-12 col-md-6">
            <div class="Headerimage">
                <img src="~/Content/WeekendBootimages/Screenshot (122).png" alt="" style="width:100%" height=""/>
                <div class="centered">
                    <p>The Weekend Boot</p>
                    <h3>Made with 98% environmentally progressive materials.</h3>
                </div>
                <div class="middecontent">
                    <p> The 4-in-1 Hiking Boot</p>
                </div>
                <div class="para">
                    <h5>
                        Comfy, cosy and seriously cute. This 4-in-1 hiking boot is a go-to all year outdoor staple made for the trails, parks and city streets. They are water-
                    </h5>
                    <h5>resistant and easy to clean - from summer through winter they’ve got you covered. Each pair is vegan, cruelty free and made with recycled ocean</h5>

                    <h5>plastic.</h5>
                </div>
            </div>
        </div>
        <div class="space">
        </div>
        <div class="products w-100">
            <div class="Product-list w-100" style="margin-left: 10px; display: flex; flex-flow: wrap; justify-content:space-between">

                @foreach (var a in ViewBag.data)
                {
                      <div>
                          @* <a href="/Products/WeeknedBoots?id=@a.Product_Id" id="home">*@
                          <a href="/Products/WeeknedBoots?id=@a.Product_Id" id="home">
                              <img id='menuImg111' src="~/Content/WeekendBootimages/@a.Image1" alt="logo"
                                   onmouseover="onHover(); " onmouseout="offHover();" />
                          </a>
                          <div class="prices">
                              <div class="stars">
                                  <i class="bi bi-star-fill"></i>
                                  <i class="bi bi-star-fill"></i>
                                  <i class="bi bi-star-fill"></i>
                                  <i class="bi bi-star-fill"></i>
                                  <i class="bi bi-star-fill"></i>
                              </div>
                              <h6>@a.Product_Name</h6>
                              <p>RS: @a.Price</p>
                              <input type="submit" value="AddTocard" style="border-radius:20px;margin-bottom:10px;background-color:#123026; color:#FFFFFF;width:150px;height:40px;" itemid="@a.Product_Id" onclick="Addtocard(this)">
                          </div>
                          <br />
                      </div>

                }
            </div>       
            </div>
        </div>
    <script type="text/javascript">
        function Addtocard(item) {
            var itemid = $(item).attr("itemid");
         
            var formdata = new FormData();
            formdata.append("Itemid", itemid);
            alert(itemid)
            $.ajax({
                async: true,
                type: "Post",
                contentType: false,
                processData: false,
                data: formdata,
                url: "/Products/WeekendBootMainPage/",
                success: function (data) {
                    if (data.success) {
                        $("#Carditgem").text("Card(" + data.Counter + ")");
                    }

                },
                error: function () {
                    alert("there is something is Wrong....")
                }
            })
        }
          
    </script>
