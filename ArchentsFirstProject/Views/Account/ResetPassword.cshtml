@model  ArchentsFirstProject.Models.ResetPassword
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ResetPassword</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        .main{
            margin-left:400px;
            margin-top:300px;
        }
        .form-control{
            padding:8px;
            margin:15px;
           border:inset;
        }
        .control-label{
            margin-left:15px;
            color:black;
           
        }
        #btns{
            margin-left:15px;
          
        }
        .main h2{
            margin-left:15px;
            
        }
        
        

    </style>
</head>
<body>
    <div>
       
        <div class="main">
            <h2>ResetPassword</h2>
           
            <div class="resetpassword">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">

                        <div class="text-danger">
                            @ViewBag.Message
                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.NewPassword, htmlAttributes: new { @class = "control-label " })
                            <div class="form-group-lg  ">
                                @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control w-50", type ="password" } })
                                @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "control-label " })
                            <div class="form-group-lg  ">
                                @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control w-50", type = "password" } })
                                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group" style="margin-top:30px;">
                            @Html.HiddenFor(a => a.ResetCode)
                        </div>
                        <div class="form-group" style=" display:flex">
                            <div id="btns">
                                <input type="submit" value="Create" class="btn btn-success" />
                            </div>
                            <div style="margin-left:30px;" id="btns" class="login">
                                @Html.ActionLink("Back to Login", "Login", "Account", "", new { @class = "btn btn-primary" })
                            </div>
                        </div>
                    </div>
                }

                @section Scripts{
                    <script src="~/Scripts/jquery.validate.min.js"></script>
                    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
                }

            </div>
        </div>
    </div>
</body>
</html>
