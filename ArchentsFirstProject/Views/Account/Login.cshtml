@model  ArchentsFirstProject.Models.UserLogin
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <style>
        *{
            margin:0;
            padding:0;

        }
        .form-horizontal {
            margin-left: 250px;
            margin-top: 150px;
        }


        #btn12 {
            margin-top: 10px;
            border-radius: 20px;
            background-color: black;
        }
        p {
            font-size: 3vw;
        }
        .aaa h5 {
            margin: 5px;
        }
        #homeAndCreateLink {
            margin-left: 5px;
            margin-bottom: 50px;
        }
    </style>
</head>
<body>
    <div class="">
        <div id="homeAndCreateLink" style=" background-color:#EFEFEF;">
            @Html.ActionLink("Home/", "Home", "Home", new { style = "text-decoration:none; color:#686363" })
            @Html.ActionLink("Account", "Home", "Home", new { style = "text-decoration:none; color:#686363" })

        </div>
        <p style="margin-left:250px; margin-top:50px;">Sign in to your account</p>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @if (ViewBag.Message != "")
                {
                    <div class="text-danger">@ViewBag.Message</div>
                }

                <div class="form-group">
                    @Html.LabelFor(model => model.EmailID, htmlAttributes: new { @class = "control-label " })
                    <div class="form-group-lg ">
                        @Html.EditorFor(model => model.EmailID, new { htmlAttributes = new { @class = "form-control w-50" } })
                        @Html.ValidationMessageFor(model => model.EmailID, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label " })
                    <div class="form-group-lg">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control w-50" } })

                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-success" value="Sign In" id="btn12" />
                    <div class="aaa" style="display:flex;">
                        <h5> @Html.ActionLink("Forgot your password?", "ForgotPassword", "Account", new { style = "text-decoration:none; color:black" })</h5>
                        <h5>  @Html.ActionLink("Not a member?", "UserRegister", "Account", new { style = "text-decoration:none; color:black" })</h5>
                        <h5>@Html.ActionLink("Register here", "UserRegister", "Account", new { style = "text-decoration:none; color:black" })</h5>

                    </div>
                </div>
            </div>
        }
    </div>

